<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/setmusic2">

    <Switch
        android:id="@+id/musicSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="70dp"
        android:text="音乐开关"
        android:checked="true"
        android:textColor="#FF0099"
        android:switchMinWidth="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp" />

    <Switch
        android:id="@+id/volumSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音效开关"
        android:checked="true"
        android:textColor="#FF0099"
        android:layout_below="@+id/musicSwitch"
        android:layout_alignLeft="@+id/musicSwitch"
        android:layout_alignStart="@+id/musicSwitch"
        android:layout_marginTop="119dp" />

</RelativeLayout>
